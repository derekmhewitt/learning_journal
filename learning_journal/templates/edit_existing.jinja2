{% extends "layout.jinja2" %}
{% block body %}
            <h2>Edit: {{ entry.title }}</h2>
            <form action="{{ request.route_url('edit_existing', id=entry.id)}}" method="POST">
                <input type="text" name="title" value="{{ entry.title }}"required></input>
                <textarea rows="20" cols="60" type="text" name="body" required>
                    {{ entry.body | safe }}
                </textarea>
                <input type="submit" value="submit">
            </form>
{% endblock %}